# ===========================================
# VidFab AI Video Platform - Environment Variables Template
# ===========================================
# 复制此文件为 .env 或 .env.local 并填入实际值
# ===========================================

# NextAuth Configuration (REQUIRED)
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Configuration (Optional)
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED=true
NEXT_PUBLIC_AUTH_GOOGLE_ID=your_google_client_id

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AWS SES Email Service Configuration (Optional)
AWS_SES_SMTP_HOST=email-smtp.us-west-1.amazonaws.com
AWS_SES_SMTP_USERNAME=your_aws_ses_username
AWS_SES_SMTP_PASSWORD=your_aws_ses_password
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_REPLY_TO_EMAIL=support@yourdomain.com

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Logging
LOG_LEVEL=info

# Redis Configuration for Queue System
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue Configuration
QUEUE_PREFIX=vidfab-video-processing
QUEUE_CONCURRENCY=3
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60000
